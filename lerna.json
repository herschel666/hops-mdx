{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "0.2.0",
  "registry": "https://registry.npmjs.org/",
  "command": {
    "version": {
      "message": "chore: release %s :feelsgood:",
      "conventionalCommits": true,
      "createRelease": "github",
      "forcePublish": true,
      "exact": true
    },
    "publish": {
      "preDistTag": "next"
    }
  }
}
